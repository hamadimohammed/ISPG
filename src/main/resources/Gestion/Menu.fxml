<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="500.0" minWidth="1050.0" stylesheets="@../CssPack/Menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Menu.MenuController">
   <left>
      <VBox fx:id="sidebar" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="190.0" spacing="10.0" styleClass="side_bar" BorderPane.alignment="TOP_LEFT">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fx:id="user" fill="#683d3d" strokeType="OUTSIDE" strokeWidth="0.0" text="\@khalidtahri">
                           <font>
                              <Font name="System Bold Italic" size="15.0" />
                           </font></Text>
                     </children>
                  </HBox>
                  <ToggleButton mnemonicParsing="false" onAction="#disconnect" styleClass="log_out">
                     <graphic>
                        <ImageView fitHeight="22.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Assets/Logout_26px.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </ToggleButton>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />

         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="15.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #eef5f9;" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
